<a href="/search">Search</a>
<button><a href="/pet-list">Pet List</a></button>
<br>
<h2>Pet</h2>
<br>
<h4>{{pet.name}}</h4>
<h4>{{pet.specie}}</h4>
<h4>{{pet.breed}}</h4>
<h4>{{pet.age}}</h4>
<h4>{{pet.size}}</h4>
<h4>{{pet.weight}}</h4>
<h4>{{pet.sex}}</h4>
<h4>{{pet.vaccinated}}</h4>
<h4>{{pet.neutered}}</h4>
<h4>{{shelter.user.fullName}}</h4>
<h4>{{shelter.user.address}}</h4>
<iframe
  width="550"
  height="400"
  style="border:0"
  loading="lazy"
  allowfullscreen
  src="https://www.google.com/maps/embed/v1/place?key={{api_key}}
    &q={{googleApiAddress}}">
</iframe>
<br>
<form action="/message-send/{{pet._id}}" method="POST">
  {{#each messages}}
    <p>{{this.message}}</p>
    <p>From: {{this.from.username}}</p>
    <br>
  {{/each}}
  <textarea name="messageText" cols="50" rows="5"></textarea>
  <br>
  <button type="submit">Send Message</button>
</form>