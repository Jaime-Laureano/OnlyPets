<div class="flex">
    <img src="/images/OPLogo.png" alt="OnlyPets logo" id="oplogo-img">
</div>
<br>
<div class="login-signup">
    <div class="div-gray-shadow-search">
        <br>
        <form action="/login" method="POST" class="flex">
            <div>
                <label for="username">Username:</label>
                <input type="text" name="username" placeholder="Enter Username">
            </div>
            <div>
                <label for="password">Password:</label>
                <input type="password" name="password" placeholder="Enter Password">
            </div>
            <button type="submit" class="blue-button">Login</button>
        </form>
        <form action="/signup" method="GET" class="flex">
            <button type="submit" id="signup-button">Sign Up</button>
            {{#if error}}
                <h3 class="error">{{error}}</h3>
            {{/if}}
        </form>
    </div>
</div>